{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "timeSegment": {
      "type": "string",
      "pattern": "^\\d{2}:\\d{2}:\\d{2}$"
    },
    "timeframe": {
      "type": "object",
      "properties": {
        "from": {
          "$ref": "#/definitions/timeSegment"
        },
        "to": {
          "$ref": "#/definitions/timeSegment"
        }
      },
      "required": ["from", "to"]
    },
    "ktivSegment": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ktiv"]
        },
        "value": {
          "type": "string"
        },
        "recordingTimeFrame": {
          "$ref": "#/definitions/timeframe"
        }
      },
      "required": ["type", "value", "recordingTimeFrame"]
    },
    "qriSegment": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["qri"]
        },
        "value": {
          "type": "string"
        },
        "recordingTimeFrame": {
          "$ref": "#/definitions/timeframe"
        }
      },
      "required": ["type", "value", "recordingTimeFrame"]
    },
    "stumaSegment": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["stuma"]
        }
      },
      "required": ["type"]
    },
    "ptuhaSegment": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ptuha"]
        }
      },
      "required": ["type"]
    },
    "segment": {
      "oneOf": [
        {
          "$ref": "#/definitions/ktivSegment"
        },
        {
          "$ref": "#/definitions/qriSegment"
        },
        {
          "$ref": "#/definitions/stumaSegment"
        },
        {
          "$ref": "#/definitions/ptuhaSegment"
        }
      ]
    },
    "perakim": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "header": {
            "type": "string"
          },
          "date": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "pesukim": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "segments": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/segment"
                  }
                }
              },
              "required": ["segments"]
            }
          }
        },
        "required": ["header", "pesukim"]
      }
    },
    "additionals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "letter": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "tanachUsName": {
            "type": "string"
          },
          "pesukimCount": {
            "type": "number"
          },
          "perakim": {
            "$ref": "#/definitions/perakim"
          },
          "perekFrom": {
            "type": "number"
          },
          "perekTo": {
            "type": "number"
          }
        },
        "required": ["letter", "name", "tanachUsName", "perakim"]
      }
    }
  },
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "tanachUsName": {
        "type": "string"
      },
      "helek": {
        "type": "string"
      },
      "pesukimCount": {
        "type": "number"
      },
      "perakim": {
        "$ref": "#/definitions/perakim"
      },
      "perekFrom": {
        "type": "number"
      },
      "perekTo": {
        "type": "number"
      },
      "additionals": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/additionals"
        }
      }
    },
    "required": ["name", "helek", "pesukimCount"],
    "oneOf": [
      {
        "required": ["perakim", "tanachUsName"]
      },
      {
        "required": ["additionals"]
      }
    ]
  },
  "minItems": 35,
  "maxItems": 35
}
