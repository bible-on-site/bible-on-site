{
	"name": "bible-on-site",
	"version": "0.1.4",
	"private": true,
	"scripts": {
		"update": "npx npm-check-updates --peer --deep -u && npm install && npm install && npm run update:playwright",
		"update:playwright": "npx playwright install",
		"dev": "next dev -p 3000",
		"dev-turbo": "cross-env TURBOPACK=1 next dev --turbo -p 3000",
		"build": "next build --no-lint",
		"start": "next start",
		"lint": "next lint",
		"test": "npm run test:unit && npm run test:e2e && npm run test:perf",
		"test:unit": "node --import tsx ./node_modules/jest/bin/jest.js",
		"test:e2e": "playwright test --config=playwright.e2e.config.ts",
		"test:perf": "playwright test --config=playwright.perf.config.ts",
		"test:coverage": "npm run test:unit && npm run test:e2e && npm run coverage:merge",
		"coverage:merge": "node --import tsx ./tests/util/coverage/merge-coverage.mts"
	},
	"engines": {
		"node": ">=22.2.0"
	},
	"dependencies": {
		"@hebcal/core": "5.4.11",
		"@syncfusion/ej2-react-grids": "26.1.42",
		"@syncfusion/ej2-react-layouts": "26.1.38",
		"flowbite": "2.4.1",
		"flowbite-react": "0.10.1",
		"gematry": "1.0.2",
		"html-flip-book-react": "https://gitpkg.now.sh/doradsoft/html-flip-book/html-flip-book-react?master",
		"moment-timezone": "0.5.45",
		"next": "rc",
		"nuqs": "1.17.5",
		"react": "rc",
		"react-dom": "rc",
		"react-phone-number-input": "3.4.4"
	},
	"devDependencies": {
		"@playwright/test": "1.45.3",
		"@types/jest": "29.5.12",
		"@types/node": "20.14.12",
		"@types/react": "18.3.3",
		"@types/react-dom": "18.3.0",
		"autoprefixer": "10.4.19",
		"cross-env": "^7.0.3",
		"eslint": "8.57.0",
		"eslint-config-next": "15.0.0-rc.0",
		"eslint-plugin-jest": "^28.6.0",
		"eslint-plugin-jsonc": "2.16.0",
		"eslint-plugin-react": "7.35.0",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"monocart-reporter": "2.6.1",
		"postcss": "8.4.39",
		"swc-plugin-coverage-instrument": "0.0.24",
		"tailwindcss": "3.4.6",
		"ts-jest": "29.2.3",
		"ts-node": "10.9.2",
		"tsx": "4.16.2",
		"typescript": "5.5.4",
		"typescript-eslint": "7.17.0",
		"web-vitals": "4.2.2"
	}
}
