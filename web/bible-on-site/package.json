{
  "name": "bible-on-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "update": "npx npm-check-updates --peer --deep -u && npm install && npm install && npm run update:playwright",
    "update:playwright": "npx playwright install",
    "postinstall": "npx depcheck",
    "dev": "next dev --turbo -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "npm run test:unit && npm run test:e2e && npm run test:perf",
    "test:unit": "node --import tsx ./node_modules/jest/bin/jest.js",
    "test:e2e": "playwright test --config=playwright.e2e.config.ts",
    "test:perf": "playwright test --config=playwright.perf.config.ts"
  },
  "engines": {
    "node": ">=22.2.0"
  },
  "dependencies": {
    "@hebcal/core": "^5.4.8",
    "flowbite": "^2.4.1",
    "gematry": "^1.0.2",
    "html-flip-book-react": "https://gitpkg.now.sh/doradsoft/html-flip-book/react?master",
    "moment-timezone": "^0.5.45",
    "next": "15.0.0-rc.0",
    "nuqs": "^1.17.4",
    "react": "19.0.0-rc-c21bcd627b-20240624",
    "react-dom": "19.0.0-rc-c21bcd627b-20240624"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.0.0-rc.0",
    "jest": "^29.7.0",
    "tsx": "^4.16.2",
    "typescript": "^5",
    "depcheck": "^1.4.7"
  }
}
