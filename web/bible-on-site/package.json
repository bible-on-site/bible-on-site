{
	"name": "bible-on-site",
	"version": "0.2.156",
	"private": true,
	"scripts": {
		"update": "npx npm-check-updates --peer --deep -u && npm install && npm install && npm run update:playwright",
		"update:playwright": "npx playwright install",
		"dev": "next dev -p 3001",
		"dev-webpack": "cross-env WEBPACK=1 next dev --webpack -p 3001",
		"build": "next build",
		"start": "next start -p 3002",
		"lint": "biome lint",
		"test:all": "npm run test:unit && npm run coverage:e2e && npm run test:perf",
		"test:unit": "node --no-deprecation --trace-deprecation --import tsx ./node_modules/jest/bin/jest.js",
		"test:e2e": "playwright test --config=playwright.e2e.config.ts",
		"test:perf": "playwright test --config=playwright.perf.config.ts",
		"coverage:all": "npm run coverage:unit && npm run coverage:e2e && npm run coverage:merge",
		"coverage:unit": "cross-env MEASURE_COV=1 node --no-deprecation --import tsx ./node_modules/jest/bin/jest.js",
		"coverage:e2e": "cross-env MEASURE_COV=1 playwright test --config=playwright.e2e.config.ts",
		"coverage:merge": "node --import tsx ./tests/util/coverage/merge-coverage.mts",
		"package": "cross-env-shell \"docker build -t bible-on-site:${npm_package_version} .\"",
		"version": "cross-env-shell echo ${npm_package_version}"
	},
	"bin": {
		"biome": "./node_modules/@biomejs/biome/bin/biome"
	},
	"engines": {
		"node": ">=24.11.1"
	},
	"dependencies": {
		"@hebcal/core": "6.0.6",
		"@syncfusion/ej2-react-grids": "31.2.16",
		"@syncfusion/ej2-react-layouts": "31.2.12",
		"flowbite": "4.0.1",
		"flowbite-react": "0.12.10",
		"gematry": "1.0.2",
		"html-flip-book-react": "0.0.0-alpha.1",
		"moment-timezone": "0.6.0",
		"next": "16.0.7",
		"nuqs": "2.8.1",
		"react": "19.2.1",
		"react-dom": "19.2.1",
		"react-phone-number-input": "3.4.14"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@playwright/test": "1.57.0",
		"@tailwindcss/postcss": "4.1.17",
		"@types/jest": "30.0.0",
		"@types/node": "24.10.1",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"autoprefixer": "10.4.22",
		"cross-env": "10.1.0",
		"eslint": "9.39.1",
		"eslint-config-next": "16.0.7",
		"jest": "30.2.0",
		"jest-environment-jsdom": "30.2.0",
		"jest-junit": "16.0.0",
		"monocart-reporter": "2.9.23",
		"postcss": "8.5.6",
		"swc-plugin-coverage-instrument": "0.0.32",
		"tailwindcss": "4.1.17",
		"ts-jest": "29.4.6",
		"ts-node": "10.9.2",
		"tsx": "4.21.0",
		"typescript": "5.9.3",
		"typescript-eslint": "8.48.1",
		"web-vitals": "5.1.0"
	}
}
