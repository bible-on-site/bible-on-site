{
	"name": "bible-on-site",
	"version": "0.2.239",
	"private": true,
	"license": "MIT",
	"scripts": {
		"update": "npx npm-check-updates --peer --deep -u && npm install && npm install && npm run update:playwright",
		"update:playwright": "npx playwright install",
		"predev": "docker compose -f ../../devops/docker-compose.yml up -d minio && node scripts/toggle-flip-book-dep.mjs local && npm install --prefer-offline",
		"dev": "dotenv -e .dev.env -- next dev -p 3001",
		"dev-webpack": "dotenv -e .dev.env -- next dev --webpack -p 3001",
		"build": "next build && npm run postbuild",
		"postinstall": "node scripts/copy-local-flip-book.mjs",
		"flip-book:local": "node scripts/toggle-flip-book-dep.mjs local && npm install",
		"flip-book:npm": "node scripts/toggle-flip-book-dep.mjs npm && npm install",
		"flip-book:check": "node scripts/toggle-flip-book-dep.mjs check",
		"postbuild": "shx cp -r public .next/standalone/ && shx cp -r .next/static .next/standalone/.next/ && shx cp -r node_modules/@img .next/standalone/node_modules/",
		"start": "cross-env PORT=3001 HOSTNAME=127.0.0.1 node .next/standalone/server.js",
		"lint": "biome lint",
		"test:all": "npm run test:unit && npm run test:e2e && npm run test:perf",
		"test:unit": "node --no-deprecation --trace-deprecation --import tsx ./node_modules/jest/bin/jest.js",
		"test:e2e": "dotenv -e .test.env -- playwright test --config=playwright.e2e.config.ts",
		"test:perf": "echo 'NOTE: Perf tests require npm run build first (uses production server)' && dotenv -e .test.env -- playwright test --config=playwright.perf.config.ts",
		"coverage:all": "npm run coverage:unit && npm run coverage:e2e && npm run coverage:merge",
		"coverage:unit": "cross-env MEASURE_COV=1 node --no-deprecation --import tsx ./node_modules/jest/bin/jest.js",
		"coverage:e2e": "dotenv -e .test.env -- cross-env MEASURE_COV=1 playwright test --config=playwright.e2e.config.ts",
		"coverage:merge": "node --import tsx ./tests/util/coverage/merge-coverage.mts",
		"package": "cross-env-shell \"docker build -t bible-on-site:${npm_package_version} .\"",
		"version": "cross-env-shell echo ${npm_package_version}"
	},
	"bin": {
		"biome": "./node_modules/@biomejs/biome/bin/biome"
	},
	"engines": {
		"node": ">=24.11.1 <24.12.0"
	},
	"dependencies": {
		"autoprefixer": "10.4.24",
		"flowbite": "4.0.1",
		"flowbite-react": "0.12.16",
		"gematry": "1.0.2",
		"html-flip-book-react": "0.0.0-alpha.22",
		"moment-timezone": "0.6.0",
		"mysql2": "3.16.2",
		"next": "16.1.6",
		"nuqs": "2.8.7",
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"react-phone-number-input": "3.4.14",
		"sharp": "0.34.5",
		"sunrise-sunset-js": "3.2.0",
		"temporal-polyfill": "0.3.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@playwright/test": "1.58.1",
		"@swc/core": "1.15.11",
		"@swc/jest": "0.2.39",
		"@testing-library/dom": "10.4.1",
		"@testing-library/react": "16.3.2",
		"@types/jest": "30.0.0",
		"@types/node": "25.2.0",
		"@types/react": "19.2.10",
		"@types/react-dom": "19.2.3",
		"cross-env": "10.1.0",
		"dotenv-cli": "11.0.0",
		"get-port": "7.1.0",
		"jest": "30.2.0",
		"jest-environment-jsdom": "30.2.0",
		"jest-junit": "16.0.0",
		"lighthouse": "13.0.1",
		"monocart-reporter": "2.9.23",
		"picomatch": "4.0.3",
		"postcss": "8.5.6",
		"sass": "1.97.3",
		"shx": "0.4.0",
		"swc-plugin-coverage-instrument": "0.0.32",
		"ts-jest": "29.4.6",
		"ts-node": "10.9.2",
		"tsx": "4.21.0",
		"typescript": "5.9.3",
		"web-vitals": "5.1.0"
	}
}
