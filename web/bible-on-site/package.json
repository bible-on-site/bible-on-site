{
	"name": "bible-on-site",
	"version": "0.1.73",
	"private": true,
	"scripts": {
		"update": "npx npm-check-updates --peer --deep -u && npm install && npm install && npm run update:playwright",
		"update:playwright": "npx playwright install",
		"dev": "next dev -p 3001",
		"dev-turbo": "cross-env TURBOPACK=1 next dev --turbo -p 3001",
		"build": "next build --no-lint",
		"start": "next start -p 3002",
		"lint": "next lint",
		"test": "npm run test:unit && npm run test:e2e && npm run test:perf",
		"test:unit": "node --import tsx ./node_modules/jest/bin/jest.js",
		"test:e2e": "playwright test --config=playwright.e2e.config.ts",
		"test:perf": "playwright test --config=playwright.perf.config.ts",
		"test:coverage": "npm run test:unit && npm run test:e2e && npm run coverage:merge",
		"coverage:merge": "node --import tsx ./tests/util/coverage/merge-coverage.mts",
		"prepare": "husky"
	},
	"engines": {
		"node": ">=22.2.0"
	},
	"babel": {
		"presets": ["next/babel"],
		"plugins": ["istanbul"]
	},
	"dependencies": {
		"@hebcal/core": "5.9.0",
		"@syncfusion/ej2-react-grids": "28.2.4",
		"@syncfusion/ej2-react-layouts": "28.2.4",
		"flowbite": "2.5.2",
		"flowbite-react": "0.10.2",
		"gematry": "1.0.2",
		"html-flip-book-react": "https://gitpkg.now.sh/doradsoft/html-flip-book/html-flip-book-react?master",
		"moment-timezone": "0.5.47",
		"next": "15.1.6",
		"nuqs": "2.3.2",
		"react": "rc",
		"react-dom": "rc",
		"react-phone-number-input": "3.4.11"
	},
	"devDependencies": {
		"@playwright/test": "1.50.1",
		"@types/jest": "29.5.14",
		"@types/node": "22.13.1",
		"@types/react": "19.0.8",
		"@types/react-dom": "19.0.3",
		"autoprefixer": "10.4.20",
		"cross-env": "^7.0.3",
		"eslint": "9.19.0",
		"eslint-config-next": "15.1.6",
		"eslint-plugin-jest": "^28.11.0",
		"eslint-plugin-jsonc": "2.19.1",
		"eslint-plugin-react": "7.37.4",
		"husky": "^9.1.7",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"monocart-reporter": "2.9.13",
		"postcss": "8.5.1",
		"swc-plugin-coverage-instrument": "^0.0.25",
		"tailwindcss": "3.4.17",
		"ts-jest": "29.2.5",
		"ts-node": "10.9.2",
		"tsx": "4.19.2",
		"typescript": "5.7.3",
		"typescript-eslint": "8.23.0",
		"web-vitals": "4.2.4"
	}
}
